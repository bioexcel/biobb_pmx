{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_pmx/json_schemas/1.0/pmxcreate_top",
    "name": "biobb_pmx Pmxcreate_top",
    "title": "Wrapper class for the PMX create_top module.",
    "description": null,
    "type": "object",
    "info": {
        "wrapped_software": {
            "name": "PMX create_top",
            "version": ">=1.0.1",
            "license": "GNU"
        },
        "ontology": {
            "name": "EDAM",
            "schema": "http://edamontology.org/EDAM.owl"
        }
    },
    "required": [
        "input_topology1_path",
        "input_topology2_path",
        "output_topology_path"
    ],
    "properties": {
        "input_topology1_path": {
            "type": "string",
            "description": "Path to the input topology file 1",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_pmx/raw/master/biobb_pmx/test/data/pmx/ligand.itp",
            "enum": [
                ".*\\.itp$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.itp$",
                    "description": "Path to the input topology file 1",
                    "edam": "format_3883"
                }
            ]
        },
        "input_topology2_path": {
            "type": "string",
            "description": "Path to the input topology file 2",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_pmx/raw/master/biobb_pmx/test/data/pmx/ligand.itp",
            "enum": [
                ".*\\.itp$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.itp$",
                    "description": "Path to the input topology file 2",
                    "edam": "format_3883"
                }
            ]
        },
        "output_topology_path": {
            "type": "string",
            "description": "Path to the complete ligand topology file",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_pmx/raw/master/biobb_pmx/test/data/pmx/ligand_top.zip",
            "enum": [
                ".*\\.zip$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.zip$",
                    "description": "Path to the complete ligand topology file",
                    "edam": "format_3987"
                }
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "force_field": {
                    "type": "string",
                    "default": "amber99sb-star-ildn-mut.ff",
                    "wf_prop": false,
                    "description": "Force-field to be included in the generated topology."
                },
                "water": {
                    "type": "string",
                    "default": "tip3p",
                    "wf_prop": false,
                    "description": "Water model to be included in the generated topology."
                },
                "system_name": {
                    "type": "string",
                    "default": "Pmx topology",
                    "wf_prop": false,
                    "description": "System name to be included in the generated topology."
                },
                "mols": {
                    "type": "array",
                    "default": "[[Protein,1],[Ligand,1]]",
                    "wf_prop": false,
                    "description": "Molecules to be included in the generated topology."
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "wf_prop": true,
                    "description": "Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "wf_prop": true,
                    "description": "Do not execute if output files exist."
                },
                "container_path": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "Path to the binary executable of your container."
                },
                "container_image": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "Container Image identifier."
                },
                "container_volume_path": {
                    "type": "string",
                    "default": "/inout",
                    "wf_prop": false,
                    "description": "Path to an internal directory in the container."
                },
                "container_working_dir": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "Path to the internal CWD in the container."
                },
                "container_user_id": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "User number id to be mapped inside the container."
                },
                "container_shell_path": {
                    "type": "string",
                    "default": "/bin/bash",
                    "wf_prop": false,
                    "description": "Path to the binary executable of the container shell."
                }
            }
        }
    },
    "additionalProperties": false
}